---
import type Supplier from "../types/supplier"

import styles from '../styles/Suppliers.module.css'
import utils from '../styles/Utils.module.css'
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets";

export const prerender = true

const response = await fetch('http://localhost:4321/api/suppliers', {
    method: 'GET',
    headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
    }
})

const suppliers: Supplier[] = await response.json();
---

<Layout title="Suppliers">
    <h1 className={utils.sectionHeading}>Suppliers</h1>

    <div class={utils.index}>
        <h1 class={utils.indexHeading}>Suppliers</h1>
        {suppliers.map(link => (
            <a href={`suppliers/#${link.name}`}>
                <h1 class="indexItem">{link.name}</h1>
            </a>
        ))}
    </div>

    {suppliers.map((supplier: Supplier) => (
        <div
            class={styles.supplierCard}
            id={supplier.name}>
            <div class={styles.supplierGrid}>
                <div class={styles.supplierHead}>
                    <h1 class={styles.mainHeading}>
                        {supplier.name}
                    </h1>
                    <Image
                        src={supplier.logo_image || '/default.jpg'}
                        alt={'/default.jpg'}
                        class={styles.supplierLogo}
                        width={200}
                        height={200}
                    />
                </div>
                <Image
                    src={supplier.marketing_image || '/default.jpg'}
                    alt={'/default.jpg'}
                    class={styles.supplierImage}
                    width={550}
                    height={550}
                />
            </div>

            <div class={styles.supplierInfo}>
                <p class={styles.supplierDescription}>
                    {supplier.description}
                </p>
                <button class={styles.btn}>
                    <a href={`/suppliers/${supplier.id}`}>
                        Learn More
                    </a>
                </button>
            </div>
        </div>
    ))}
</Layout>