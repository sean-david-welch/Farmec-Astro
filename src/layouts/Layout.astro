---
import { app } from '../lib/firebase-server';
import { getAuth } from 'firebase-admin/auth';
import { ViewTransitions } from 'astro:transitions';

import utils from '../styles/Utils.module.css'

import Header from './Header.astro';
import Footer from './Footer.astro'


interface Props {
	title: string;
}
const { title } = Astro.props;


const auth = getAuth(app);

let user = null;

const sessionCookie = Astro.cookies.get("session");
if (sessionCookie) {
  try {
    const decodedCookie = await auth.verifySessionCookie(sessionCookie.value);
    const uid = decodedCookie.uid;
    console.log("User Authenticated");

    // Fetch user data from the API
    const response = await fetch(`http://localhost:4321/api/users/${uid}`);
    if (!response.ok) {
      throw new Error('Failed to fetch user data');
    }
    user = await response.json();
	console.log("User:", user)
  } catch (error) {
    console.error("Error:", error);
  }
} else {
  console.log("No User");
}

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="/styles/globals.css" rel="stylesheet" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header/>
			<main class="max-w-full overflow-x-hidden mx-auto">
				<div class={utils.container}>
					<slot/>
				</div>
			</main>
		<Footer/>
	</body>
</html>